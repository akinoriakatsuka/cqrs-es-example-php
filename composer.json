{
  "name": "akinoriakatsuka/cqrs-es-example-php-2",
  "description": "CQRS/Event Sourcing example application in PHP",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "aws/aws-sdk-php": "^3.0",
    "cweagans/composer-patches": "^1.7",
    "j5ik2o/event-store-adapter-php": "^1.0",
    "monolog/monolog": "^3.9",
    "psr/log": "^3.0",
    "robinvdvleuten/ulid": "^5.0",
    "slim/psr7": "^1.6",
    "slim/slim": "^4.0",
    "vlucas/phpdotenv": "^5.6",
    "webonyx/graphql-php": "^15.0"
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "cweagans/composer-patches": true
    }
  },
  "extra": {
    "patches": {
      "j5ik2o/event-store-adapter-php": {
        "Fix payload type to Binary for Go compatibility": "../../repo/cqrs-es-example-php/patches/event-store-adapter-php-binary-payload.patch"
      }
    }
  }
}
