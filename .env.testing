# Application Environment
APP_ENV=testing
APP_DEBUG=true

# GraphQL Configuration
GRAPHQL_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081
GRAPHQL_DEBUG_MODE=true
GRAPHQL_MAX_QUERY_COMPLEXITY=100
GRAPHQL_MAX_QUERY_DEPTH=10

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1
DYNAMODB_ACCESS_KEY_ID=dummy
DYNAMODB_SECRET_ACCESS_KEY=dummy
EVENT_STORE_TYPE=dynamodb

# MySQL Configuration for Tests
DB_HOST=cqrs-es-example-php-mysql-1
DB_PORT=3306
DB_DATABASE=ceer
DB_USERNAME=root
DB_PASSWORD=passwd